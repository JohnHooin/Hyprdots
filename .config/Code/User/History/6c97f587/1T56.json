{
    // Workbench 
    "workbench.colorTheme": "Catppuccin Mocha",
    "workbench.statusBar.visible": false,
    "workbench.list.smoothScrolling": true,
    "workbench.iconTheme": "vscode-icons",

    // Window
    "window.menuBarVisibility": "toggle",

    // Security
    "security.workspace.trust.untrustedFiles": "newWindow",
    "security.workspace.trust.startupPrompt": "always",
    "security.workspace.trust.enabled": false,

    // Editor
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.minimap.side": "right",
    "editor.fontFamily": "'Maple Mono', 'monospace', 'Hack Nerd Font'",
    "editor.cursorSurroundingLines": 15,
    "editor.cursorStyle": "underline",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "phase",
    "editor.smoothScrolling": true,
    "editor.fontVariations": false,
    "editor.lineHeight": 0,
    "editor.fontSize": 16,
    
    // Extension
    "extensions.autoUpdate": true,

    // Terminal 
    "terminal.external.linuxExec": "kitty",
    "terminal.explorerKind": "both",
    "terminal.sourceControlRepositoriesKind": "both",
    "terminal.integrated.fontFamily": "Hack Nerd Font",
    "terminal.integrated.fontSize": 15,

    // Telemetry
    "telemetry.telemetryLevel": "off",

    // Code runner
    "code-runner.clearPreviousOutput": true,
    "code-runner.runInTerminal": true,

    // Explore
    "explorer.confirmDelete": true,
    "explorer.confirmDragAndDrop": false,

    // Debug
    "debug.console.fontFamily": "Hack Nerd Font",
    "debug.onTaskErrors": "abort",

    // Notebook
    "notebook.output.fontFamily": "Hack Nerd Font",

    // Chat editor
    "chat.editor.fontFamily": "Hack Nerd Font",

    // Background 
    "background.fullscreen": {
      "images": [],
      "opacity": 0.91,
      "size": "cover",
      "position": "center",
      "interval": 0
    },
    
    // Git
    "git.openRepositoryInParentFolders": "never",
    "git.suggestSmartCommit": true,
    "git.autofetch": true,

    // Cmake
    "cmake.configureOnOpen": true,
    "cmake.options.statusBarVisibility": "icon",
    "cmake.options.advanced": {
      "build": {
        "statusBarVisibility": "visible"
      },
      "launch": {
        "statusBarVisibility": "visible"
      },
      "debug": {
        "statusBarVisibility": "visible"
      }
    },

    // Cpp extension
    "C_Cpp.intelliSenseEngine": "disabled",
    "http.proxyAuthorization": null,
    "c-cpp-flylint.cppcheck.addons": [],
    "c-cpp-flylint.cppcheck.enable": false,
    "c-cpp-flylint.flawfinder.enable": false,
    "c-cpp-flylint.enable": false,
    "c-cpp-flylint.flexelint.enable": false,
    "c-cpp-flylint.lizard.enable": false,
    "c-cpp-flylint.clang.noRtti": true,
    "c-cpp-flylint.clang.language": "",
    "c-cpp-flylint.clang.msExtensions": true,
    "c-cpp-flylint.clang.noExceptions": true,
    "c-cpp-flylint.clang.pedantic": true,
    "c-cpp-flylint.clang.pedanticErrors": true,
    "clang-format.fallbackStyle": "Google",
    "clang-format.language.apex.enable": false,
    "clang-format.language.cuda.enable": false,
    "clang-format.language.glsl.enable": false,
    "clang-format.language.objective-c.enable": false,
    "clang-format.language.proto.enable": false,
    "clang-format.language.typescript.enable": false,
    "[cpp]": {
      "editor.defaultFormatter": "xaver.clang-format"
    },
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 0}",

  }